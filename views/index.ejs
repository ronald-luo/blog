<%- include('./includes/header') %>

<main>
    <h2>Karasuno Blog</h2>

    <div class="tools">
        <span>Recent</span>
        <span>Views</span>
    </div>
    <div class="post-container">
        <% for( let index = 0; index < blogs.length; index++ ) { %>
            <a class="post-link" href="pages/<%= blogs[index]._id %>">
                <div class="blog">
                    <div class="img"><img
                            src="https://cdn.vox-cdn.com/thumbor/Y4WKd5g-roKr1_lO-cUT-yTG3fM=/0x0:1280x720/1200x800/filters:focal(492x239:696x443)/cdn.vox-cdn.com/uploads/chorus_image/image/69054680/nintendo_direct_mario.0.0.0.0.jpg"
                            alt=""></div>
                    <h3>
                        <%= blogs[index].title %>
                    </h3>
                    <p>
                        <%= blogs[index].description %>
                    </p>
                </div>
            </a>
        <% } %>

    </div>

</main>


<%- include('./includes/footer') %>